<h1><%= @post.title %></h1>

<p>Created by <%= @post.user.email %></p>

<p><%= @post.body %></p>

<% if current_user == @post.user %>
    <%= link_to "Edit Post", edit_post_path(@post) %>
    <%= button_to "Delete Post", @post, method: :delete %>
<% end %>

<h2>Comments</h2>
<%= render @post.comments %>

<% if user_signed_in? %>
    <h2>Add a comment:</h2>
    <%= render 'comments/form'%>
<% end %>